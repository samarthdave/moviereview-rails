<div class="container">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name),
		:html => {class: 'well well-transparent col-md-4 col-md-offset-3'}) do |f| %>
		<h2>Log in</h2>

		<div class="form-group">
			<%= f.label :email, class: 'sr-only' %>
			<%= f.email_field :email, autofocus: true, class: 'form-control movies-input', placeholder: 'Email' %>
		</div>
	
		<div class="form-group">
			<%= f.label :password, class: 'sr-only' %>
			<%= f.password_field :password, autocomplete: "off", class: 'form-control movies-input', placeholder: 'Password' %>
		</div>
	
		<% if devise_mapping.rememberable? -%>
			<div class="form-group">
				<div class="checkbox checkbox-primary checkbox-lp">
					<%= f.check_box :remember_me, id: 'checkbox1' %>
					<%= f.label :remember_me, for: 'checkbox1' %>
				</div>
			</div>
		<% end %>
		
		<div class="form-group">
			<%= f.submit "Log in", class: 'btn btn-lp' %>
			<%= render "devise/shared/links" %>
		</div>
	<% end %>
</div>